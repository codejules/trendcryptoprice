---
import PriceChange from "./PriceChange.astro";

interface Props {
  coin: {
    item: {
      id: string;
      name: string;
      symbol: string;
      thumb: string;
      price_btc: number;
      price_usd: number;
      price_eur: number;
      price_change_percentage_24h: number;
      market_cap_rank: number | null;
      trending_position: number | null;
    };
  };
}

const { coin } = Astro.props;
const {
  name,
  symbol,
  thumb,
  price_btc,
  price_usd,
  price_eur,
  price_change_percentage_24h,
  trending_position,
} = coin.item;

// validation and format price in BTC
const formatBtcPrice = (price: any): string => {
  if (typeof price !== "number" || isNaN(price)) {
    console.warn("Invalid price value");
    return "0";
  }

  let priceStr = price.toFixed(20).replace(/0+$/, "").replace(/\.$/, ""); // price formatting

  const match = priceStr.match(/^0\.0{2,}(\d{1,3})/);

  if (match) {
    const zeroCount = match[0].length - match[1].length - 2; // count zeros in subindex
    if (zeroCount > 0) {
      return `0.0<sub>${zeroCount}</sub>${match[1]}`;
    }
  }

  return price.toFixed(4);
};

const btcFormatted = formatBtcPrice(price_btc);

// Format currency numbers
const formatCurrency = (value: number, currency: string) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: currency,
    minimumFractionDigits: 2,
    maximumFractionDigits: 6,
  }).format(value);
};
---

<article
  class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 md:p-6 hover:shadow-xl transition-shadow"
>
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <div class="relative">
        <img
          aria-label="Trends cryptocurrency and coins prices in real time"
          src={thumb}
          alt={`cryptocurrency price ${name}`}
          title={`trending coin ${name}`}
          class="w-12 h-12 rounded-full"
        />
        {
          trending_position && (
            <div class="absolute -top-2 -right-2 bg-purple-600 text-white rounded-full w-6 h-6 flex items-center justify-center md:text-[10px] text-[12px] font-bold">
              #{trending_position}
            </div>
          )
        }
      </div>
      <div>
        <h1 class="text-xl font-bold text-gray-900 dark:text-white">{name}</h1>
        <h2 class="text-gray-500 dark:text-gray-400 uppercase">{symbol}</h2>
      </div>
    </div>
    <PriceChange percentage={price_change_percentage_24h} />
  </div>
  <div class="mt-4 space-y-2">
    <div class="flex justify-between">
      <span class="text-gray-600 dark:text-gray-300">Price (BTC)</span>
<!--       <span class="font-semibold text-gray-900 dark:text-white">
        {formatBtcPrice(price_btc)} BTC</span
      >  -->
      <span
        class="font-semibold text-gray-900 dark:text-white"
        set:html={btcFormatted + " BTC"}
      />
    </div>
    <div class="flex justify-between">
      <span class="text-gray-600 dark:text-gray-300">Price (USD)</span>
      <span class="font-semibold text-gray-900 dark:text-white"
        >{formatCurrency(price_usd, "USD")}</span
      >
    </div>
    <div class="flex justify-between">
      <span class="text-gray-600 dark:text-gray-300">Price (EUR)</span>
      <span class="font-semibold text-gray-900 dark:text-white"
        >{formatCurrency(price_eur, "EUR")}</span
      >
    </div>
  </div>
</article>
